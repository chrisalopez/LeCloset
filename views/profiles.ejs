<!-- PROFILE PAGE -->

<!--
|||||||||||||||||||||||||||||||||||||||||
HEADER
|||||||||||||||||||||||||||||||||||||||||
-->

<header>
  <$ include ../views/partials/nav.ejs $>
</header>

<!--
|||||||||||||||||||||||||||||||||||||||||
MAIN PRODUCTS GRID
|||||||||||||||||||||||||||||||||||||||||
-->

<div class="row">
	<div class="col-md-12">

		<script type="text/template" id="profile-template">
    <div class="<%= customCategory %>">
      <div class="thumbnail">
				<div class="caption">
					<div class="image-wrapper">
						<img class="activator" src="<%= image.sizes.Best.url %>" width="280" height="350">
					</div>
					<div class="info-wrapper">
						<h6 class ="unbrandedName"><%= unbrandedName %></h6>
						<p class="retailer">Retailer: <%= retailer.name %></p>
						<p class="price">Price: <%= priceLabel %></p>
					</div>

					<div class="buttons">
						<p>
							<div class="btn btn-primary remove-from-closet" data-id="<%= id %>">Remove</div>
							<a href="<%= clickUrl %>" class="btn btn-default" target="_blank">Buy Now</a>
						</p>
					</div>
				</div>
			</div>
    </div>
		</script>

    <div class='uil-ring-css' style='transform:scale(0.59);'>
			<div></div>
		</div>

    <div id="corbot" class='hide'>
			<img src="http://cdn.smosh.com/sites/default/files/bloguploads/pokemon-gif-brock-hump.gif" />
		</div>

	</div>
</div>

<div class="product-item">

</div>

<!--
|||||||||||||||||||||||||||||||||||||||||
FILTER FOOTER
|||||||||||||||||||||||||||||||||||||||||
-->
<div class="container">
  <div class="bar">

    <div class="filter">
      <span class="filter__label">Filter: </span>
      <button class="allbutton">
        <span class="action__text">All</span>
      </button>

      <button class="topbutton">
        <span class="action__text">Tops</span>
      </button>
      <button class="bottombutton">
        <span class="action__text">Bottoms</span>
      </button>
      <button class="shoesbutton">
        <span class="action__text">Shoes</span>
      </button>
      <button class="accessoriesbutton">
        <span class="action__text">Accessories</span>
      </button>
      <button class="miscbutton">
        <span class="action__text">Misc</span>
      </button>
    </div>

    <button class="cart">
      <i class="cart__icon fa fa-shopping-cart"></i>
      <span class="text-hidden">Shopping cart</span>
      <span class="cart__count">0</span>
    </button>
  </div>
</div>
